<%= simple_form_for(@task, html: {class: 'form-signin'}) do |f| %>
  <div class="alert alert-danger"><%= f.error_notification %></div>

  <%= f.input :content, label: false, required: true, autofocus: true, input_html: {class: 'form-control'}, placeholder: "New Task" %>
  <%= f.button :submit, class: 'btn btn-lg btn-primary btn-block' %>
<% end %>
